<div class="user container">
  <table class="user__info">
    <tr>
      <th>ユーザー情報</th>
      <td>
        <!--名前の表示-->
        <%= @user.username %>
      </td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @user.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @user.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @user.phone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @user.email %></td>
    </tr>
  </table><br />

  <div class="exhibition__items">
    <h2><strong>出品物</strong></h2>
    <% @items.each do |itm| %>
      <div class="exhibition__items--list col-md-4">
        <div class="exhibition__items--name">
          <%= link_to item_path(itm.item.id) do %>
            <%= attachment_image_tag @items, :image, fallback: 'no_image.jpg', size:'350x350' %>
            <%= itm.name %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <h2 id="order__list"><strong>購入履歴</strong></h2>
  <% @orders.each do |ord| %>
    <div class="order__list--info col-md-4">
      <div class="order__list--name">
        <%= link_to item_path(ord.item.id) do %>
          <%#= attachment_image_tag @orders, :image, fallback: 'no_image.jpg', size:'350x350' %>
          <%= ord.item_name %>
        <% end %>
      </div>
      <div class="order__list--price">
        ￥<%= ord.total_price %>
      </div>
      <div class="order__list--order_status">
        <% if ord.order_status == 0 %>
          <div id="0 pre_shipping">注文受付中</div>
        <% elsif ord.order_status == 1 %>
          <div id="1 shipping">商品発送中</div>
        <% else %>
          <div id="2 finish_shipping">取引完了</div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

