<% if user_signed_in? %>
	<div class="row">
		<div class="col-lg-12 slideshow">
	    	<div class="theTarget">
			    <% Item.all.each do | itm | %>
					<div class="item_parameter">
						<%= link_to item_path( itm ) do %>
							<%= attachment_image_tag itm, :image, fallback: 'no_image.jpg', size:'350x350' %>
						<% end %>
						<div class="item_data">
							<%= itm.name %><br />
		   				    <%= itm.introduction %>
		   				</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
<% else %>
	<div class="main--visual">
		<div class="main--visual__content">
			<p class="main--visual__top">あなたのおもいでを、だれかに引き継ぎませんか。</p>
			<p>「おもいで通販」は「思い出の品」専用の個人通販サイトです。</p>
						<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  <div class="field">
			    <%= f.label :メールアドレス %><br />
			    <%= f.email_field :email, autocomplete: "email", placeholder: "sample@mail.com" %>
			  </div>

			  <div class="field">
			    <%= f.label :パスワード %><br />
			    <%= f.password_field :password, autocomplete: "current-password", placeholder: "your password" %>
			  </div>

			  <% if devise_mapping.rememberable? %>
			    <div class="field">
			      <%= f.check_box :remember_me %>
			      <%= f.label :ログイン情報を記憶する %>
			    </div>
			  <% end %>

			  <div class="actions">
			    <%= f.submit "ログイン", class: "btn btn-primary" %>
			  </div>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12 slideshow">
			<p>こんな商品が出品されています</p>
	    	<div class="theTarget">
			    <% Item.all.each do | itm | %>
					<div class="item_parameter">
						<%= link_to item_path( itm ) do %>
							<%= attachment_image_tag itm, :image, fallback: 'no_image.jpg', size:'350x350' %>
						<% end %>
						<div class="item_data">
							<%= itm.name %><br />
		   				    <%= itm.introduction %>
		   				</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
<% end %>
